solvers
{
    T
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-09;
        relTol          0.01;
    }
    TFinal
    {
        $T
        relTol          0;
    }
}


SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell	   0;
    pRefValue	   0;
    residualControl
    {
        T   1e-9;
    }
}

